procedure TForm1.Button17Click(Sender: TObject);
begin
  second := StrToFloat(edit1.text);
  case flag of
  1:
    edit1.Text := FloatToStr(first + second);
  2:
    edit1.Text := FloatToStr(first - second);
  3:
    edit1.Text := FloatToStr(first * second);
  4:
    if(second = 0) then
      begin
        show
      end;
    else

  end;
end;

